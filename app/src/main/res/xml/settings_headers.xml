<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.hippo.ehviewer.ui.fragment.BasePreference
        android:icon="@drawable/v_sad_panda_primary_x24"
        android:title="@string/settings_eh"

        app:fragment="com.hippo.ehviewer.ui.fragment.EhFragment" />

    <com.hippo.ehviewer.ui.fragment.BasePreference
        android:icon="@drawable/v_book_open_primary_x24"
        android:title="@string/settings_read"
        app:allowDividerAbove="true"
        app:fragment="com.hippo.ehviewer.ui.fragment.ReadFragment" />

    <com.hippo.ehviewer.ui.fragment.BasePreference
        android:icon="@drawable/v_download_primary_x24"
        android:title="@string/settings_download"
