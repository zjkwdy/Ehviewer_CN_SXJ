    <com.hippo.ehviewer.ui.fragment.BasePreference
        android:icon="@drawable/v_adb_primary_x24"
        android:title="@string/settings_advanced"
        app:allowDividerAbove="true"
        app:fragment="com.hippo.ehviewer.ui.fragment.AdvancedFragment" />

    <com.hippo.ehviewer.ui.fragment.BasePreference
        android:icon="@drawable/v_info_primary_x24"
        android:title="@string/settings_about"
